<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme Base -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="textColorPrimary">@color/primary_text</item>
        <item name="textColorSecondary">@color/secondary_text</item>
        <item name="progressEmptyColor">@color/progress_empty</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

</resources>